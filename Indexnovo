          <div id="controls" style="align-items:center">
            <select id="tipoPonto">
              <option value="Nascente">ğŸ’§ Nascente</option>
              <option value="EspÃ©cie">ğŸŒ¿ EspÃ©cie</option>
              <option value="Queimada">ğŸ”¥ Queimada</option>
              <option value="Outros">ğŸ“ Outros</option>
            </select>

            <input id="descricao" type="text" placeholder="DescriÃ§Ã£o (opcional)" style="min-width:260px" />

            <button id="salvarPonto">Salvar Ponto</button>
            <button id="limparTudo" style="background:#f44336;color:#fff">Limpar tudo</button>
