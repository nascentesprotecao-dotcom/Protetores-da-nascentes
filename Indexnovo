            <!-- NÃºmeros e porcentagens -->
          </div>
        </div>

        <div class="col card">
          <h4>GrÃ¡ficos</h4>
          <canvas id="graficoPizzaCidade" style="max-height:280px"></canvas>
          <canvas id="graficoBarCidade" style="max-height:280px;margin-top:12px"></canvas>
        </div>
